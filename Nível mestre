#include <stdio.h>
#include <stdlib.h>
#include <string.h>

// Definição da struct Sala
typedef struct Sala {
    char nome[50];
    char pista[50];
    struct Sala* esquerda;
    struct Sala* direita;
} Sala;

// Definição da struct PistaNode
typedef struct PistaNode {
    char pista[50];
    struct PistaNode* esquerda;
    struct PistaNode* direita;
} PistaNode;

// Definição da struct HashNode
typedef struct HashNode {
    char pista[50];
    char suspeito[50];
    struct HashNode* proximo;
} HashNode;

// Função para criar uma nova sala
Sala* criarSala(char* nome, char* pista) {
    Sala* novaSala = (Sala*) malloc(sizeof(Sala));
    strcpy(novaSala->nome, nome);
    strcpy(novaSala->pista, pista);
    novaSala->esquerda = NULL;
    novaSala->direita = NULL;
    return novaSala;
}

// Função para criar um novo nó de pista
PistaNode* criarPistaNode(char* pista) {
    PistaNode* novoNo = (PistaNode*) malloc(sizeof(PistaNode));
    strcpy(novoNo->pista, pista);
    novoNo->esquerda = NULL;
    novoNo->direita = NULL;
    return novoNo;
}

// Função para criar um novo nó de hash
HashNode* criarHashNode(char* pista, char* suspeito) {
    HashNode* novoNo = (HashNode*) malloc(sizeof(HashNode));
    strcpy(novoNo->pista, pista);
    strcpy(novoNo->suspeito, suspeito);
    novoNo->proximo = NULL;
    return novoNo;
}

// Função para inserir uma pista na árvore de pistas
PistaNode* inserirPista(PistaNode* raiz, char* pista) {
    if (raiz == NULL) {
        return criarPistaNode(pista);
    }

    if (strcmp(pista, raiz->pista) < 0) {
        raiz->esquerda = inserirPista(raiz->esquerda, pista);
    } else if (strcmp(pista, raiz->pista) > 0) {
        raiz->direita = inserirPista(raiz->direita, pista);
    }

    return raiz;
}

// Função para inserir uma pista e um suspeito na tabela hash
void inserirNaHash(HashNode** hash, char* pista, char* suspeito) {
    int indice = hash(pista) % 10;
    HashNode* novoNo = criarHashNode(pista, suspeito);
    novoNo->proximo = hash[indice];
    hash[indice] = novoNo;
}

// Função para encontrar o suspeito correspondente a uma pista
char* encontrarSuspeito(HashNode** hash, char* pista) {
    int indice = hash(pista) % 10;
    HashNode* atual = hash[indice];
    while (atual != NULL) {
        if (strcmp(atual->pista, pista) == 0) {
            return atual->suspeito;
        }
        atual = atual->proximo;
    }
    return NULL;
}

// Função para explorar as salas e coletar pistas
void explorarSalas(Sala* salaAtual, PistaNode** pistas, HashNode** hash) {
    if (salaAtual == NULL) {
        printf("Você chegou ao fim da exploração!\n");
        return;
    }

    printf("Você está na %s\n", salaAtual->nome);
    if (strcmp(salaAtual->pista, "") != 0) {
        printf("Pista encontrada: %s\n", salaAtual->pista);
        *pistas = inserirPista(*pistas, salaAtual->pista);
        inserirNaHash(hash, salaAtual->pista, "Suspeito 1");
    }

    printf("Escolha um caminho: (e) Esquerda, (d) Direita, (s) Sair\n");
    char escolha;
    scanf(" %c", &escolha);

    switch (escolha) {
        case 'e':
            explorarSalas(salaAtual->esquerda, pistas, hash);
            break;
        case 'd':
            explorarSalas(salaAtual->direita, pistas, hash);
            break;
        case 's':
            printf("Você saiu da exploração!\n");
            return;
        default:
            printf("Opção inválida! Tente novamente.\n");
            explorarSalas(salaAtual, pistas, hash);
    }
}

// Função para verificar o suspeito final
void verificarSuspeitoFinal(HashNode** hash, char* suspeito) {
    int count = 0;
    for (int i = 0; i < 10; i++) {
        HashNode* atual = hash[i];
        while (atual != NULL) {
            if (strcmp(atual->suspeito, suspeito) == 0) {
                count++;
            }
            atual = atual->proximo;
        }
    }

    if (count >= 2) {
        printf("O suspeito %s é o culpado!\n", suspeito);
    } else {
        printf("Não há provas suficientes para acusar o suspeito %s!\n", suspeito);
    }
}

int main() {
    // Criar a árvore binária
    Sala* hall = criarSala("Hall de Entrada", "");
    hall->esquerda = criarSala("Sala de Estar", "Pista 1");
    hall->direita = criarSala("Cozinha", "Pista 2");
    hall->esquerda->esquerda = criarSala("Biblioteca", "Pista 3");
    hall->esquerda->direita = criarSala("Jardim", "");
    hall->direita->esquerda = criarSala("Sala de Jantar", "Pista 4");
    hall->direta->direita = criarSala("Quarto", "");

    // Criar a árvore de pistas
    PistaNode* pistas = NULL;

    // Criar a tabela hash
    HashNode** hash = (HashNode**) malloc(10 * sizeof(HashNode*));
    for (int i = 0; i < 10; i++) {
        hash[i] = NULL;
    }

    // Iniciar a exploração
    explorarSalas(hall, &pistas, hash);

    // Verificar o suspeito final
    char* suspeito = "Suspeito 1";
    verificarSuspeitoFinal(hash, suspeito);

    return 0;
}

